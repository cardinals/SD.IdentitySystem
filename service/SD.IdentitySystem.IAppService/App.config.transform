<configuration>
  <injectionRegisterConfiguration>
    <wcfInterfaces>
      <assembly name="SD.IdentitySystem.IAppService" />
    </wcfInterfaces>
  </injectionRegisterConfiguration>
  <system.serviceModel>
    <client>
      <!--身份认证服务契约配置-->
      <endpoint address="http://localhost:4973/Hosts/AuthenticationContract.svc" binding="wsHttpBinding" bindingConfiguration="DefaultBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IAuthenticationContract" name="SD.IdentitySystem.IAppService.Interfaces.IAuthenticationContract">
      </endpoint>
      <!--用户服务契约配置-->
      <endpoint address="http://localhost:4973/Hosts/UserContract.svc" binding="wsHttpBinding" bindingConfiguration="NotReliableSessionBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IUserContract" name="SD.IdentitySystem.IAppService.Interfaces.IUserContract">
      </endpoint>
      <!--权限服务契约配置-->
      <endpoint address="http://localhost:4973/Hosts/AuthorizationContract.svc" binding="wsHttpBinding" bindingConfiguration="NotReliableSessionBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IAuthorizationContract" name="SD.IdentitySystem.IAppService.Interfaces.IAuthorizationContract">
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>