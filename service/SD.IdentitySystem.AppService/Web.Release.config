<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!--WCF配置-->
  <system.serviceModel>
    <!--WCF客户端配置，手动增加endpoint节点-->
    <client>
      <!--身份认证服务契约配置-->
      <endpoint address="http://localhost:8689/Hosts/AuthenticationContract.svc" binding="wsHttpBinding" bindingConfiguration="DefaultBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IAuthenticationContract" name="SD.IdentitySystem.IAppService.Interfaces.IAuthenticationContract" behaviorConfiguration="DefaultBehavior" xdt:Transform="SetAttributes"
                xdt:Locator="Match(name)" >
      </endpoint>
      <!--用户服务契约配置-->
      <endpoint address="http://localhost:8689/Hosts/UserContract.svc" binding="wsHttpBinding" bindingConfiguration="NotReliableSessionBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IUserContract" name="SD.IdentitySystem.IAppService.Interfaces.IUserContract" behaviorConfiguration="DefaultBehavior" xdt:Transform="SetAttributes"
                xdt:Locator="Match(name)" >
      </endpoint>
      <!--权限服务契约配置-->
      <endpoint address="http://localhost:8689/Hosts/AuthorizationContract.svc" binding="wsHttpBinding" bindingConfiguration="NotReliableSessionBinding" contract="SD.IdentitySystem.IAppService.Interfaces.IAuthorizationContract" name="SD.IdentitySystem.IAppService.Interfaces.IAuthorizationContract" behaviorConfiguration="DefaultBehavior" xdt:Transform="SetAttributes"
                xdt:Locator="Match(name)" >
      </endpoint>
    </client>
  </system.serviceModel>
</configuration>