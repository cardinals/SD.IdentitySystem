@using SD.IdentitySystem.IPresentation.ViewModels.Outputs
@{
    ViewBag.Title = "创建角色";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*角色信息面板*@
<div style="width: 48%; height: 50%; float: left; margin: 5px;">
    <div class="easyui-panel" title="角色信息" style="width:100%;height:626px;padding:10px;">
        <table id="tbAdd">
            <tr>
                <td class="tdTitle">信息系统：</td>
                <td class="tdContent">
                    <select class="easyui-combobox" id="slSystem" name="systemNo" data-options="editable:false" style="width: 210px">
                        @*<option value="" selected="selected">请选择</option>*@
                        @foreach (InfoSystemView system in ViewBag.InfoSystems)
                        {
                            <option value="@system.Number">@system.Name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td class="tdTitle">角色名称：</td>
                <td class="tdContent">
                    <input class="easyui-textbox" type="text" name="realName" data-options="required:true,width:210" />
                </td>
            </tr>
            <tr>
                <td class="tdTitle">角色描述：</td>
                <td class="tdContent">
                    <input class="easyui-textbox" type="text" name="realName" data-options="multiline:true,width:210" style="height:70px" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="tdContent">
                    <a href="#" onclick="javascript: $('#frmCreateUser').submit();" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">确定</a>
                    <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">取消</a>
                </td>
            </tr>
        </table>
    </div>
</div>

