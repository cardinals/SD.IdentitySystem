@section header{
    <link type="text/css" href="~/Content/css/Common/Form.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/scripts/Server/Add.js"></script>
}

<div style="width: 100%; height: 100%; float:left; margin: 0;">
    <div class="easyui-panel" data-options="footer:'#footer'" style="width: 100%; height: 269px; padding: 10px;">
        <form id="frmCreateServer">
            <table id="tbAdd" style="margin: 0 auto;">
                <tr>
                    <td class="tdTitle">服务停止日期：</td>
                    <td class="tdContent">
                        <input class="easyui-datebox" name="serviceOverDate" data-options="editable:false,required:true" style="width: 210px" />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">唯一码：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="uniqueCode" data-options="required:true,width:210"/>
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">主机名：</td>
                    <td class="tdContent">
                        <input class="easyui-textbox" type="text" name="hostName" data-options="required:true,width:210"/>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div id="footer" style="padding: 5px;">
        <div style="float: right;">
            <a href="#" onclick="createServer();" class="easyui-linkbutton c6" data-options="iconCls:'icon-ok'" style="width:90px">确定</a>
            <a href="#" onclick="javascript: $.easyuiExt.closeWindow();" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" style="width:90px">取消</a>
        </div>
    </div>
</div>
